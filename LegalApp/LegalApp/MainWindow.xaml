<Window x:Class="LegalApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LegalApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Margin="10,0">
            <Button Content="Smuggling" Name="smuggling_btn" Padding="10" Margin="5" Click="Smuggling_btn_Click"/>
            <Button Content="Funds without coverage" Name="funds_without_coverage_btn" Padding="10" Margin="5" Click="Funds_without_coverage_btn_Click"/>
            <Button Content="Tax evasion" Name="taxs_evasion_btn" Padding="10" Margin="5" Click="Taxs_evasion_btn_Click"/>
        </StackPanel>
        <Frame Grid.Column="1" Margin="10" Name="contentFrame" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
